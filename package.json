{
  "name": "moodlog",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start:mobile": "yarn workspace @moodlog/mobile start",
    "start:server": "yarn workspace @moodlog/server start",
    "upgrade:tamagui": "yarn workspace @moodlog/mobile upgrade:tamagui",
    "check:tamagui": "yarn workspace @moodlog/mobile check:tamagui",
    "format": "biome format --write .",
    "format:check": "biome check ."
  },
  "packageManager": "yarn@4.8.1",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2"
  }
}
